<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="nursery_plants_form_view" model="ir.ui.view">
            <field name="name">nursery.plants.form</field>
            <field name="model">nursery.plants</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Ingresar el nombre de la planta"/>
                            </h1>
                        </div>
                        <notebook>
                            <page name="feature" string="Feature">
                                <group>
                                    <group>
                                        <field name="create_date"/>
<!--                                        <field name="plant_type"/>-->
                                    </group>
                                    <group>
                                        <field name="price"/>
                                    </group>
                                </group>
                            </page>
                            <page name="planter" string="Planter"></page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="nursery_plants_tree_view" model="ir.ui.view">
            <field name="name">nursery.plants.tree</field>
            <field name="model">nursery.plants</field>
            <field name="arch" type="xml">
                <tree string="Plants">
                    <field name="name"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <record id="nursery_plants_search_view" model="ir.ui.view">
            <field name="name">nursery.plants.search</field>
            <field name="model">nursery.plants</field>
            <field name="arch" type="xml">
                <search string="Plants">
                    <group expand="1" string="Group By">
                        <filter string="Precio" name="price" domain="[]"
                                context="{'group_by':'price'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="nursery_plants_act_window" model="ir.actions.act_window">
            <field name="name">Plantas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">nursery.plants</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="nursery_plants_root"
                  name="Nursery Plants"
                  sequence="10"
                  web_icon="test01,static/description/icon.png"/>

        <menuitem name="Plants"
                  id="nursery_plants_menu"
                  parent="nursery_plants_root"
                  action="nursery_plants_act_window"/>

    </data>
</odoo>